<UXML xmlns="UnityEngine.UIElements">
    <VisualElement class="p-4 flex-row justify-between" tooltip="Enter a natural language prompt to guide the AI in generating visual content. Refer to the model description in the picker or documentation for tips on writing effective prompts.">
        <Label class="font-bold" text="Prompt"/>
        <Label name="prompt-limit-indicator" class="prompt-limit-indicator" text="0/1024" tooltip="Character limit for Prompt"/>
    </VisualElement>
    <TextField class="white-space-normal mb-12" name="prompt" multiline="true" placeholder-text="Enter what to generate..."/>
    <VisualElement class="p-4 flex-row justify-between" tooltip="Specify elements you want the generator to avoid.">
        <Label class="font-bold" text="Negative Prompt"/>
        <Label name="negative-prompt-limit-indicator" class="prompt-limit-indicator" text="0/1024" tooltip="Character limit for Negative Prompt"/>
    </VisualElement>
    <TextField class="white-space-normal mb-4" name="negative-prompt" multiline="true" placeholder-text=""/>
</UXML>
