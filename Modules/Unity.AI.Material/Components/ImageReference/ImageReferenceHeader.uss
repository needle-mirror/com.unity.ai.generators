:root {
    flex-direction: row;
    justify-content: space-between;
}

#delete-image-reference {
    background-image: resource("Packages/com.unity.ai.generators/modules/Unity.AI.Generators.UI/Icons/X.png");
    width: 16px;
    height: 16px;
    -unity-background-scale-mode: scale-to-fit;
    -unity-background-image-tint-color: var(--unity-colors-default-text);
}

.no-delete #delete-image-reference {
    display: none;
}
